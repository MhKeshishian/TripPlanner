<resources>

    <style name="Theme.TripPlanner" parent="android:Theme.Material.Light.NoActionBar">
    </style>

    <!-- Text View Styles -->
    <style name="TextViewStyle">
        <item name="android:background">@color/dark_gray</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <!--    Title of the pages Styles -->
    <style name="TitleText">
        <item name="android:textSize">28sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- Information Text Styles -->
    <style name="InfoText">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Radio Button Styles -->
    <style name="RadioButtonText">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/light_green</item>
        <!--<item name="android:background">@color/dark_green</item>-->
    </style>

    <!-- Splash Screen Text View Style -->
    <style name="SplashTextViewStyle">
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>
