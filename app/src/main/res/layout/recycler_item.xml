<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginBottom="25dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:ignore="UselessParent">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/CommonCardViewStyle"
            android:layout_margin="8dp"
            android:layout_gravity="center">

            <ImageView
                android:id="@+id/recImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="@string/niagara_description"
                android:scaleType="centerCrop"
                android:src="@drawable/niagara" />

            <TextView
                android:id="@+id/recInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="330dp"
                android:textStyle="bold"
                style="@style/TextViewStyle"
                android:padding="13dp"/>
            <TextView
                android:id="@+id/recAdditional"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="355dp"
                android:padding="13dp"
                android:text="@string/includes_taxes_and_fees"
                android:textColor="@color/white"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/recName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/niagaraInfo"
                android:text="@string/niagara_description"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:background="@drawable/grey_rounded_background"
                android:textColor="@color/white"
                android:padding="5dp"/>

        </androidx.cardview.widget.CardView>



    </LinearLayout>

</LinearLayout>